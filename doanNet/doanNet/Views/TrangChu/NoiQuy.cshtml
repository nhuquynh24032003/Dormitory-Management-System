
@{
    ViewBag.Title = "NoiQuy";
    Layout = "~/Views/Shared/layout.cshtml";
}
<link href="~/Content/css/Trangchu.css" rel="stylesheet" />


<style>
    .card {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 220px;
    }
</style>
<div class="container-full">
    <div class="container" style="padding-top: 50px; padding-right: 50px; padding-left: 50px;">
        <div class="row">
            <h2>NỘI QUY</h2>
            <hr style="border-top: 4px solid blue;">
        </div>
        <div class="row row-cols-4 g-4" style="padding: 0px 100px 0px 100px">
            <div class="col">
                <div class="card">
                    <img src="~/Images/house-rules.png" class="card-img-top" style="width: 120px; height: 120px; padding: 20px">
                    <div class="card-body">
                        <p class="card-title" style="font-weight: bold; font-size: 15px; padding-bottom: 30px; text-align: center">Nội quy ký túc xá</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <img src="~/Images/regulation.png" class="card-img-top" style="width: 120px; height: 120px; padding: 20px">
                    <div class="card-body">
                        <p class="card-title" style="font-weight: bold; font-size: 15px; padding-bottom: 30px; text-align: center">Nội dung vi phạm và khung hình phạt xử lý kỷ luật</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <img src="~/Images/guidelines.png" class="card-img-top" style="width: 120px; height: 120px; padding: 20px">
                    <div class="card-body">
                        <p class="card-title" style="font-weight: bold; font-size: 15px; padding-bottom: 30px; text-align: center">Quy định về tiếp nhận lưu trú, chấm dứt HĐ nội trú</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <img src="~/Images/teamrules.png" class="card-img-top" style="width: 120px; height: 120px; padding: 20px">
                    <div class="card-body">
                        <p class="card-title" style="font-weight: bold; font-size: 15px; padding-bottom: 30px; text-align: center">Quy định về sinh hoạt, học tập, ứng xử tại ký túc xá</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card" >
                    <img src="~/Images/behavior.png" class="card-img-top" style="width: 120px; height: 120px; padding: 20px">
                    <div class="card-body">
                        <p class="card-title" style="font-weight: bold; font-size: 15px; padding-bottom: 30px; text-align: center">Quy định đánh giá tổ trưởng phòng & tính lỗi vi phạm</p>
